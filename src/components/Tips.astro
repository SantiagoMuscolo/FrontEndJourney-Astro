---
import { cards } from '../constants/constants'
---

<section class="flex flex-col justify-center items-center m-5" id="tips">
    <h3 class="capitalize text-[2.5rem] lg:text-[4rem] text-[#FEDA00] font-bold">Tips</h3>
    <div class="flex flex-wrap justify-center gap-10 mt-10">
        {
            cards.map((card : {id: number, name: string, text: string, svg: string}) => (
                <div class="flex border border-[#FEDA00] p-10 inner-shadow rounded-3xl flex-wrap justify-center items-center">
                    <div class="text-center">
                        <span class="text-[#FEDA00] text-[2rem] font-bold">{card.name}</span>
                        <p class="max-w-[400px] mt-1 text-xl">{card.text}</p>
                    </div>
                    <div class="mt-10 md:mt-0">
                        <img src={card.svg} alt="" width="200" height="200" class="md:ml-10"/>     
                    </div>
                        
                </div>
            ))
        }
    </div>
</section>

<style>
    .inner-shadow {
      box-shadow: inset 0 0 20px #FEDA00; 
    }
  </style>