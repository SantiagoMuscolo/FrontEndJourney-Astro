---
import { timeLine } from '../constants/constants'
---

<section class="mt-24"> 
    <h3 class="capitalize text-[2.5rem] lg:text-[4rem] text-[#FEDA00] font-bold text-center">Road Map</h3>
    <div class="mt-10  ml-5 md:ml-20 lg:ml-28 xl:ml-40">
        {timeLine.map((event, index) => (
            <div class="flex items-start w-full">
              <div class="flex flex-col items-center mr-4"> 
                <div class="w-3 h-3 bg-[#FEDA00] rounded-full z-10"></div>
                {index !== timeLine.length - 1 && (
                  <div class="w-[2px] h-[360px] bg-[#FEDA00] flex-grow sm:h-[300px] xl:h-[200px]"></div> <!-- Línea dinámica entre círculos -->
                )}
              </div>
              <div class="flex-1 py-2 relative bottom-5 mr-4"> 
                <h3 class="text-2xl font-bold">{event.title}</h3> 
                <p class="text-white max-w-[1500px]">{event.text}</p>
                <div class="flex mt-5 gap-4">
                  {event.image1 && <img src={event.image1} width="50" height="100" alt="image1" />}
                  {event.image2 && <img src={event.image2} width="50" height="100" alt="image2" />}
                  {event.image3 && <img src={event.image3} width="50" height="100" alt="image3" />}
                </div>
              </div>
            </div>
          ))}
    </div>
</section>